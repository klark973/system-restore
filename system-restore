####################
### Main program ###
####################

# Safety first
set -o errexit
set -o noglob
set -o nounset
set -o errtrace

# Executable file name
readonly progname="${0##*/}"

# Full path to this script
readonly scriptname="$(realpath -- "$0")"

# Supplemental sources
readonly utility="${scriptname%/*}/libexec"

# Bootstrapping
. "$utility"/defaults.sh
[ ! -s "/etc/$progname"/restore.ini ] ||
	. "/etc/$progname"/restore.ini
. "$utility"/privates.sh
. "$utility"/common.sh
. "$utility"/parser.sh
. "$utility"/config.sh

# Catching all unexpected errors
trap 'unexpected_error "$LINENO" "${BASH_SOURCE[0]}"' ERR

# Entry point
nls_locale_setup
parse_cmdline "$@"
check_prerequires

# Checking the backup and configuration
if [ -n "${use_backup-}" ]; then
	nls_config backup
	check_backup_metadata
	user_config restore.ini
	[ -z "${use_hooks-}" ] ||
		user_config config.sh
	setup_profile

	if [ -n "${profile-}" ]; then
		user_config "${profile-}"/restore.ini
		[ -z "${use_hooks-}" ] ||
			user_config "${profile-}"/config.sh
	fi

	check_config
fi

# Setting up logging and user interface
. "$utility"/logger.sh

# Checking the target disk drive
if [ -n "${use_target-}" ]; then
	nls_config target

	. "$utility"/trusted.sh
	. "$utility"/target.sh

	check_trusted_boot_hw
	protect_boot_devices
	search_target_device
fi

# Executing the primary action
if [ "${action-}" = validate ]; then
	. "$utility"/validate.sh
else
	nls_config restore

	. "$utility"/recovery.sh
fi

# Finalizing recovery
[ -z "${finalact-}" ] ||
	. "$utility"/finalize.sh
exit 0

